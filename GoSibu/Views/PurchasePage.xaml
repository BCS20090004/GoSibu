<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Gosibu.Shared.Models;assembly=Gosibu.Shared"
             xmlns:viewmodels="clr-namespace:GoSibu.ViewModels"
             x:DataType="viewmodels:ShowPackagePageViewModel"
             x:Class="GoSibu.Views.PurchasePage"
             Title="PurchasePage">

        <!--<Grid>
            <Map x:Name="map"/>
        </Grid>-->
    <ScrollView>
        <StackLayout>
            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="True" />

            <Label Text="Package Name:"></Label>
            <Label Text="{Binding PackageDetail.PackageName}" />

            <Label Text="Departuren Location:"></Label>
            <Label Text="{Binding PackageDetail.Departure}"  />

            <Label Text="Destination 1:"></Label>
            <Label Text="{Binding PackageDetail.Destination1}"  />

            <Label Text="Destination 2:"></Label>
            <Label Text="{Binding PackageDetail.Destination2}" />

            <Label Text="Destination 3:"></Label>
            <Label Text="{Binding PackageDetail.Destination3}"   />

            <Label Text="Destination 4:"></Label>
            <Label Text="{Binding PackageDetail.Destination4}"  />

            <Label Text="Duration:"></Label>
            <Label Text="{Binding PackageDetail.Duration}"/>

            <Label Text="Package Price:"></Label>
            <Label Text="{Binding PackageDetail.PackagePrice}"  />

            <Label Text="Person In Chargee:"></Label>
            <Label Text="{Binding PackageDetail.PersonInCharge}"  />

            <Label Text="Person In Charge Mobile Number:"></Label>
            <Label Text="{Binding PackageDetail.PICMobileumber}" />

            <Label Text="Discription:"></Label>
            <Label Text="{Binding PackageDetail.Discription}"   />

            <Label Text="Attention:"></Label>
            <Label Text="{Binding PackageDetail.Attention}"  />
        </StackLayout>
    </ScrollView>

      

</ContentPage>