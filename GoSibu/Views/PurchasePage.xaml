<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Gosibu.Shared.Models;assembly=Gosibu.Shared"
             xmlns:viewmodels="clr-namespace:GoSibu.ViewModels"
             x:DataType="viewmodels:ShowPackagePageViewModel"
             x:Class="GoSibu.Views.PurchasePage"
             Title="PurchasePage">

        <!--<Grid>
            <Map x:Name="map"/>
        </Grid>-->
    <ScrollView>

        <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/> <!--13-->
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,0.8">
                <GradientStop Color="#84DCC6"
                          Offset="0.3" />
                <GradientStop Color="#95A3B3"
                          Offset="1.5" />
            </LinearGradientBrush>
        </Grid.Background>
        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="True" />
            <HorizontalStackLayout Grid.Row="0">
                <Label Text="Package Name:"
                   FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0">
                </Label>
                <Label Text="{Binding PackageDetail.PackageName}" 
                   FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="1">
                <Label Text="Departuren Location:"
                   FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.Departure}"  
                   FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="2">
                <Label Text="Destination 1:"
                   FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.Destination1}" 
                   FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="3">
                <Label Text="Destination 2:"
                       FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.Destination2}"
                       FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="4">
                <Label Text="Destination 3:"
                       FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.Destination3}"
                       FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="5">

                <Label Text="Destination 4:"
                       FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.Destination4}"
                   FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="6">
                <Label Text="Duration:"
                   FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.Duration}"
                   FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="7">
                <Label Text="Package Price:"
                   FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.PackagePrice}" 
                   FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="8">
                <Label Text="Person In Chargee:"
                   FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.PersonInCharge}"
                   FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="9">
                <Label Text="Person In Charge Mobile Number:"
                   FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.PICMobileumber}"
                   FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="10">
                <Label Text="Discription:"
                   FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
                <Label Text="{Binding PackageDetail.Discription}"
                   FontFamily="Roboto"
                   FontSize="15"/>
            </HorizontalStackLayout>

        <HorizontalStackLayout Grid.Row="11">
            <Label Text="Attention:"
                   FontFamily="Roboto"
                   FontSize="15"
                   Margin="0,0,20,0"></Label>
            <Label Text="{Binding PackageDetail.Attention}"
                   FontFamily="Roboto"
                   FontSize="15"/>
        </HorizontalStackLayout>
    </Grid>
    </ScrollView>

</ContentPage>