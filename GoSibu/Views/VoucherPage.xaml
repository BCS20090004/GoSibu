<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:GoSibu.ViewModels"
             xmlns:models="clr-namespace:Gosibu.Shared.Models;assembly=Gosibu.Shared"
             x:DataType="viewmodels:VoucherListPageViewModel"
             x:Class="GoSibu.Views.VoucherPage"
             Title="VoucherPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Background>
        <LinearGradientBrush EndPoint="0.5,0.8">
            <GradientStop Color="#84DCC6"
                          Offset="0.3" />
            <GradientStop Color="#95A3B3"
                          Offset="1.5" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ContentPage.Content>
        
        <StackLayout Margin="10,0,10,0">

            <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="True" />
            
            <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}" >
                
                <CollectionView ItemsSource="{Binding Vouchers}" >
                    <CollectionView.ItemTemplate >
                        <DataTemplate x:DataType="models:VoucherModel">
                            <Border Padding="15,0"
                                        Background="#FFFFFF"
                                        HeightRequest="160"
                                        WidthRequest="800"
                                        StrokeShape="RoundRectangle 40,0,0,40"                                        
                                        StrokeThickness="2.5"
                                        >
                                <Border.Stroke>
                                    <LinearGradientBrush EndPoint="0,1">
                                        <GradientStop Color="#95A3B3" Offset="0.1" />
                                        <GradientStop Color="#222222" Offset="1.0" />
                                    </LinearGradientBrush>
                                </Border.Stroke>
                                <StackLayout Margin="10,30,10,0" >
                                <HorizontalStackLayout >
                                    <Image Source="coupon.png"
                                           WidthRequest="50"
                                           Margin="0,0,20,0"></Image>
                                    <VerticalStackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Offer Name: " />
                                    <Label Text="{Binding OfferName}" />
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Offer: " />
                                    <Label Text="{Binding Offer}" />
                                </StackLayout>

                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Duration: " />
                                    <Label Text="{Binding Duration}" />
                                </StackLayout>
                                <StackLayout Orientation="Horizontal">
                                    <Label Text="Description: " />
                                    <Label Text="{Binding Description}" />
                                </StackLayout>
                                    </VerticalStackLayout>
                                    
                                </HorizontalStackLayout>
                                <BoxView HeightRequest="1" Color="Gray" />
                                <!--<StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:RelativeSource AncestorType={x:Type viewmodels:VoucherListPageViewModel}},Path=SelectedVoucherCommand}" CommandParameter="{Binding .}" />
                                </StackLayout.GestureRecognizers>-->
                            </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>