    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Image 
            Source="myhistory.png" 
            WidthRequest="900" 
            HeightRequest="1100" 
            Margin="0,-220,0,0">
            <Image.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnTapGestureRecognizerTapped"
                                      NumberOfTapsRequired="2" />
            </Image.GestureRecognizers>
        </Image>

        <VerticalStackLayout  Grid.Row="0" Margin="16,16,0,0">
            <Label Text="My Voucher" FontSize="27" FontFamily="PoetsenOne"></Label>
        </VerticalStackLayout>

        <ScrollView Grid.Row="3" Margin="0,-800,0,0">
            <VerticalStackLayout>
                <Frame HasShadow="True" HorizontalOptions="StartAndExpand" WidthRequest="370" HeightRequest="125" Margin="10">
                    <HorizontalStackLayout>
                        <Image Source="coupon.png"></Image>
                        <VerticalStackLayout Margin="20,0,0,0">
                            <Label Text="10% OFF"></Label>
                            <Label Text="Min Spend RM30"></Label>
                            <Label Text="Valid till 11/11/2022" Margin="0,30,0,0"></Label>
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="T&amp;C" FontAttributes="Bold" Margin="63,68,0,0" HorizontalTextAlignment="Center"></Label>
                        </VerticalStackLayout>
                        <Frame HasShadow="False" BorderColor="Red" HorizontalOptions="End" WidthRequest="69" HeightRequest="57" Margin="-70,-20,0,0">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ICommandNavToUseVoucherPage}"/>
                            </Frame.GestureRecognizers>
                            <Label Text="Use" Margin="0,0,0,0" FontSize="16" HorizontalOptions="Center" TextColor="Red" ></Label>
                        </Frame>
                    </HorizontalStackLayout>
                </Frame>

                <Frame HasShadow="True" HorizontalOptions="StartAndExpand" WidthRequest="370" HeightRequest="125" Margin="10">
