<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GoSibu.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GoSibu.Views"
    xmlns:local="clr-namespace:GoSibu"
    NavigationPage.HasNavigationBar="False">

    <TabBar>
        <Tab Title="Chat"
             x:Name="chat"
             Icon="chat.png">
            <ShellContent             
            ContentTemplate="{DataTemplate views:ChatPage}" />
        </Tab>
        <Tab Title="History"
             x:Name="history"
             Icon="history.png">
            <ShellContent             
            ContentTemplate="{DataTemplate views:HistoryPage}" />
        </Tab>
        <Tab Title="Home"
             x:Name="home"
             Icon="home.png">
            <ShellContent 
            ContentTemplate="{DataTemplate views:MainPage}" 
                Route="MainPage"/>
        </Tab>
        <Tab Title="Voucher"
             x:Name="voucher"
             Icon="coupon.png">
            <ShellContent 
            ContentTemplate="{DataTemplate views:VoucherPage}" />
        </Tab>
        <Tab Title="Account"
             x:Name="account"
             Icon="user.png">
            <ShellContent 
            ContentTemplate="{DataTemplate views:AccountPage}"
                Route="UserAccountPage"/>
        </Tab>
    </TabBar>

</Shell>
