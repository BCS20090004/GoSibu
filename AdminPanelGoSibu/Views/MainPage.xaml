                                        <TapGestureRecognizer Command="{Binding ICommandNavToEditPackagePage}"/>
                                    </Label.GestureRecognizers>
                                </Label>
                                <Label Text="DELETE" FontAttributes="Bold" Margin="120,30,0,0" HorizontalTextAlignment="End"></Label>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
